name: Security & Testing Pipeline

on:
  push:
  pull_request:
  schedule:
    - cron: '0 12 * * 1'  # Runs every Monday at 12 PM UTC

jobs:
  security-tests:
    runs-on: ubuntu-latest
    permissions:
      security-events: write
      actions: read
      contents: read

    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      # âœ… Code Scanning with CodeQL (Python)
      - name: ğŸ“Š CodeQL Analysis
        uses: github/codeql-action/init@v2
        with:
          languages: python
      - uses: github/codeql-action/analyze@v2

      # âœ… Dependency Scanning with Safety
      - name: ğŸ›¡ï¸ Python Dependency Scan
        run: |
          pip install safety
          safety check -r requirements.txt

      # âœ… Container Scanning with Trivy
      - name: ğŸ³ Scan Docker Image for Vulnerabilities
        uses: aquasecurity/trivy-action@master
        with:
          image-ref: "my-flask-app:latest"
          format: "table"
          ignore-unfixed: true
          severity: "CRITICAL,HIGH"

      # âœ… Kubernetes Security Scan
      - name: ğŸš€ Scan Kubernetes Deployment for Misconfigurations
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: "config"
          file-path: "deployment.yaml"

      # âœ… Secret Scanning with Gitleaks
      - name: ğŸ”‘ Secret Scanning
        uses: gitleaks/gitleaks-action@v2
        with:
          config-path: ".gitleaks.toml"

  # âœ… Run Automated Tests using Pytest
  run-tests:
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      - name: ğŸ Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.9"

      - name: ğŸ“¦ Install Dependencies
        run: |
          pip install -r requirements.txt

      - name: ğŸ§ª Run Tests with Pytest
        run: pytest test_app.py --maxfail=1 --disable-warnings -q
